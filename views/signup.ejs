<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Signup</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #c4dcf7;
    }

    .navbar {
            background-color: #DAC0A3 !important;
            border-radius: 10px;
        }

        .navbar .btn {
            margin-left: 10px;
        }
        .signup {
            background-color: #0F2C59;
            color: #fff;
            padding: 20px;
            border-radius: 30px;
            position: absolute;
            top: 250px;
            left: 500px;
            width: 35%;
        }
        .password-toggle {
            color: black;
            cursor: pointer;
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
        }
  </style>
</head>
<form action="/user/signup" method="post">
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="landing_page">Data Sphere Hub</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="d-flex">
          <a href="login" class="btn btn-primary me-2">Login</a>
        </div>
    </div>
  </nav>
  <% if(locals.error)  {%>
    <div class="alert alert-danger" role="alert">
        <%= locals.error %>
      </div>
    <% } %>
    <% if(locals.success)  {%>
      <div class="alert alert-success" role="alert">
          <%= locals.success %>
        </div>
      <% } %>
  <body>

  <div class="signup">
    <h3 class="text-center mb-4">Signup</h3>
    <form class="login-form">
        <div class="mb-3">
            <label for="username" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="username" placeholder="Full name" name="name" required>
          </div>
      <div class="mb-3">
        <label for="username" class="form-label">Email ID</label>
        <input type="text" class="form-control" id="email" placeholder="Email ID" name="email" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <div class="position-relative">
          <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
          <i class="far fa-eye password-toggle" id="togglePassword"></i>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Signup</button>
    </form>
  </div>
</form>

<script>
  const passwordField = document.getElementById('password');
  const togglePassword = document.getElementById('togglePassword');
  passwordField.setAttribute('type', 'password');
  togglePassword.classList.add('fa-eye-slash');
  togglePassword.addEventListener('click', function() {
    const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
    passwordField.setAttribute('type', type);

    this.classList.toggle('fa-eye-slash');
  });
</script>
</body>
</html>
